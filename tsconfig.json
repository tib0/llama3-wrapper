{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./build",
    "removeComments": true,
    "sourceMap": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "typeRoots": ["node_modules/@types"]
}
